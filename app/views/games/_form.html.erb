<%= form_tag do %>
  <div class="form-group">
    <%= label_tag :name %><br>
    <%= text_field_tag :name, "", class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= label_tag :token_cost %>
    <%= number_field_tag :token_cost, class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= label_tag :manufacturer %>
    <%= collection_select :game, :manufacturer_id, Manufacturer.all, :id, :name, include_blank: 'Choose a Manufacturer' %>
  </div>

  <h4>Or create a new manufacturer</h4>
  <div class="form-group">
    <%= label_tag :manufacturer_name %>
    <%= text_field_tag :name, "", class: "form-control" %>
  </div>

  <%= submit_tag "Create Game", class: "btn btn-primary" %>
<% end %>
