<%= form_tag '/games/new', :class => "create-game-form" do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <%= label_tag :name %><br>
    <%= text_field_tag :"game[name]", "", class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= label_tag :token_cost %><br>
    <%= number_field_tag :"game[token_cost]", class: "form-control" %><br>
  </div>

  <div class="form-group">
    <%= label_tag :manufacturer %><br>
    <%= collection_select :game, :manufacturer_id, Manufacturer.all, :id, :name, include_blank: 'Choose a Manufacturer' %>
  </div>

  <%= submit_tag "Create Game", class: "btn btn-primary", data: { disable_with: false } %>
<% end %>